<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:maxHeight="100dp" >

    <LinearLayout
        android:layout_width="50dp"
        android:layout_alignParentLeft="true"
        android:id="@+id/ll_user_wrap"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:id="@+id/iv_user_photo"
            android:src="@mipmap/icon_user_avatar"/>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:text="Luka"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="100dp"
        android:layout_toRightOf="@id/ll_user_wrap"
        android:id="@+id/ll_data_wrap"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_last_location_date"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="22:21"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_alignParentTop="true"
        android:textAlignment="center"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_width="30dp"
        android:layout_marginTop="5dp"
        android:layout_height="30dp"
        android:layout_below="@id/tv_last_location_date"
        android:layout_centerHorizontal="true"
        android:id="@+id/btn_show_history"
        android:src="@mipmap/icon_history_green_48"/>
    </RelativeLayout>
</RelativeLayout>